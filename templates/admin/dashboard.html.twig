{% extends 'backbase.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="admin-header">
    <h1 style="color: var(--admin-accent);">Admin Dashboard</h1>
    
    {% if app.user %}
        <p>Welcome back, <strong style="color: var(--admin-accent);">{{ app.user.username }}</strong></p>
    {% endif %}
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 30px;">
    <div style="background: rgba(255, 255, 255, 0.03); border-radius: 10px; padding: 25px; border: 2px solid var(--admin-accent);">
        <div style="color: var(--admin-accent); font-size: 2em; margin-bottom: 10px;">
            <i class="fas fa-users"></i>
        </div>
        <div style="font-size: 2.5em; font-weight: bold; margin: 10px 0;">0</div>
        <div style="color: #aaa;">Total Users</div>
        <a href="{{ path('admin_user_index') }}" style="color: var(--admin-accent); text-decoration: none; font-size: 0.9em; margin-top: 10px; display: inline-block;">
            View all â†’
        </a>
    </div>
    
    <div style="background: rgba(255, 255, 255, 0.03); border-radius: 10px; padding: 25px; border: 2px solid #ffcc00;">
        <div style="color: #ffcc00; font-size: 2em; margin-bottom: 10px;">
            <i class="fas fa-trophy"></i>
        </div>
        <div style="font-size: 2.5em; font-weight: bold; margin: 10px 0;">0</div>
        <div style="color: #aaa;">Matches</div>
        <div style="color: #666; font-size: 0.9em; margin-top: 10px;">Coming soon</div>
    </div>
    
    <div style="background: rgba(255, 255, 255, 0.03); border-radius: 10px; padding: 25px; border: 2px solid #9d00ff;">
        <div style="color: #9d00ff; font-size: 2em; margin-bottom: 10px;">
            <i class="fas fa-shield-alt"></i>
        </div>
        <div style="font-size: 2.5em; font-weight: bold; margin: 10px 0;">0</div>
        <div style="color: #aaa;">Teams</div>
        <div style="color: #666; font-size: 0.9em; margin-top: 10px;">Coming soon</div>
    </div>
    
    <div style="background: rgba(255, 255, 255, 0.03); border-radius: 10px; padding: 25px; border: 2px solid #00ff88;">
        <div style="color: #00ff88; font-size: 2em; margin-bottom: 10px;">
            <i class="fas fa-bolt"></i>
        </div>
        <div style="font-size: 2.5em; font-weight: bold; margin: 10px 0;">0</div>
        <div style="color: #aaa;">Activities</div>
        <div style="color: #666; font-size: 0.9em; margin-top: 10px;">Coming soon</div>
    </div>
</div>

<div style="background: rgba(255, 255, 255, 0.03); border-radius: 10px; padding: 25px; margin-bottom: 30px;">
    <h3 style="color: var(--admin-accent); margin-bottom: 20px;">Quick Actions</h3>
    <div style="display: flex; gap: 15px; flex-wrap: wrap;">
        <a href="{{ path('admin_user_index') }}" class="btn-admin btn-admin-primary">
            <i class="fas fa-users"></i> Manage Users
        </a>
        <a href="{{ path('admin_user_new') }}" class="btn-admin btn-admin-secondary">
            <i class="fas fa-user-plus"></i> Create User
        </a>
        <a href="#" class="btn-admin btn-admin-secondary" style="background: rgba(255, 193, 7, 0.1); color: #ffcc00;">
            <i class="fas fa-trophy"></i> Manage Matches
        </a>
        <a href="#" class="btn-admin btn-admin-secondary" style="background: rgba(157, 0, 255, 0.1); color: #9d00ff;">
            <i class="fas fa-shield-alt"></i> Manage Teams
        </a>
    </div>
</div>
{% endblock %}