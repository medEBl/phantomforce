{% extends 'backbase.html.twig' %}

{% block title %}User: {{ user.username }}{% endblock %}

{% block body %}
<div class="admin-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 style="color: var(--admin-accent);">User Details</h1>
            <p class="mb-0">{{ user.email }}</p>
        </div>
        <div>
            <a href="{{ path('admin_user_index') }}" class="btn-admin btn-admin-secondary me-2">
                <i class="fas fa-arrow-left"></i> Back
            </a>
            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn-admin btn-admin-primary me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
        </div>
    </div>
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
    <div style="background: rgba(255, 255, 255, 0.03); border-radius: 10px; padding: 25px;">
        <h3 style="color: var(--admin-accent); margin-bottom: 20px; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 10px;">
            <i class="fas fa-user"></i> Profile Information
        </h3>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Username</label>
            <div style="color: white; font-size: 1.1em;">{{ user.username }}</div>
        </div>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Email</label>
            <div style="color: white; font-size: 1.1em;">{{ user.email }}</div>
        </div>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Full Name</label>
            <div style="color: white; font-size: 1.1em;">{{ user.fullName }}</div>
        </div>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Country</label>
            <div style="color: white; font-size: 1.1em;">{{ user.country }}</div>
        </div>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Birth Date</label>
            <div style="color: white; font-size: 1.1em;">{{ user.birthDate|date('Y-m-d') }}</div>
        </div>
    </div>
    
    <div style="background: rgba(255, 255, 255, 0.03); border-radius: 10px; padding: 25px;">
        <h3 style="color: var(--admin-accent); margin-bottom: 20px; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 10px;">
            <i class="fas fa-cog"></i> System Information
        </h3>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Role</label>
            <div>
                <span style="background: rgba(0, 243, 255, 0.1); color: var(--admin-accent); padding: 4px 12px; border-radius: 12px; font-size: 0.9em;">
                    {{ user.role }}
                </span>
            </div>
        </div>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Status</label>
            <div>
                {% if user.isActive %}
                    <span style="color: var(--admin-success);">
                        <i class="fas fa-circle" style="font-size: 0.7em;"></i> Active
                    </span>
                {% else %}
                    <span style="color: var(--admin-danger);">
                        <i class="fas fa-circle" style="font-size: 0.7em;"></i> Inactive
                    </span>
                {% endif %}
            </div>
        </div>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Achievement Points</label>
            <div style="color: white; font-size: 1.1em;">{{ user.achievementPoints }}</div>
        </div>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Created At</label>
            <div style="color: white; font-size: 1.1em;">{{ user.createdAt|date('Y-m-d H:i:s') }}</div>
        </div>
        
        <div style="margin-bottom: 15px;">
            <label style="color: #aaa; font-size: 0.9em;">Last Login</label>
            <div style="color: white; font-size: 1.1em;">
                {% if user.lastLoginAt %}
                    {{ user.lastLoginAt|date('Y-m-d H:i:s') }}
                {% else %}
                    Never
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}