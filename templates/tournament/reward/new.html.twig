{% extends 'base.html.twig' %}

{% block title %}Phantom Force – Nouvelle Récompense{% endblock %}

{% block stylesheets %}
<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .form-card {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .form-header {
        background: var(--red-soft);
        padding: 30px;
        border-bottom: 1px solid var(--border);
    }

    .form-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-size: 11px;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
        font-weight: 700;
    }

    .form-control-pf {
        width: 100%;
        background: rgba(255,255,255,0.05);
        border: 1px solid var(--border-light);
        border-radius: 8px;
        padding: 12px 15px;
        color: white;
        transition: var(--transition);
    }

    .form-control-pf:focus {
        background: rgba(255,255,255,0.08);
        border-color: var(--red);
        outline: none;
        box-shadow: 0 0 0 2px rgba(255,45,45,0.2);
    }

    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-5 form-container">
    <div class="mb-4">
        <a href="{{ path('app_tournament_reward_index', {tournamentId: tournament.id}) }}" class="text-muted text-decoration-none small">
            <i class="fas fa-arrow-left me-1"></i> Retour à la liste
        </a>
    </div>

    <div class="form-card">
        <div class="form-header text-center">
            <h1 class="h4 fw-bold text-white mb-0">Nouvelle Récompense</h1>
            <p class="text-muted small mb-0">{{ tournament.name }}</p>
        </div>

        <div class="form-body">
            {{ form_start(form) }}
                <div class="form-group">
                    <label class="form-label">Rang</label>
                    {{ form_widget(form.rank, {'attr': {'class': 'form-control-pf', 'placeholder': 'Ex: 1'}}) }}
                    {{ form_errors(form.rank) }}
                </div>

                <div class="form-group">
                    <label class="form-label">Type de Récompense</label>
                    {{ form_widget(form.rewardType, {'attr': {'class': 'form-control-pf', 'placeholder': 'Ex: Argent liquide, Points, Skins...'}}) }}
                    {{ form_errors(form.rewardType) }}
                </div>

                <div class="form-group">
                    <label class="form-label">Valeur / Description</label>
                    {{ form_widget(form.rewardValue, {'attr': {'class': 'form-control-pf', 'placeholder': 'Ex: 100$, 5000 PF Points...'}}) }}
                    {{ form_errors(form.rewardValue) }}
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-organiser flex-grow-1 justify-content-center">
                        <i class="fas fa-save me-2"></i> ENREGISTRER
                    </button>
                    <a href="{{ path('app_tournament_reward_index', {tournamentId: tournament.id}) }}" class="btn-secondary-pf px-4">
                        ANNULER
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
