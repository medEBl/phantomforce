{% extends 'base.html.twig' %}

{% block title %}Phantom Force – Tournois{% endblock %}

{% block stylesheets %}
<style>
    .tournament-card {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        padding: 25px;
        transition: var(--transition);
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
    }

    .tournament-card:hover {
        transform: translateY(-5px);
        border-color: var(--red);
        box-shadow: var(--shadow-lg);
    }

    .tournament-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: var(--red-gradient);
        opacity: 0;
        transition: var(--transition);
    }

    .tournament-card:hover::before {
        opacity: 1;
    }

    .game-badge {
        background: var(--red-soft);
        color: var(--red);
        padding: 5px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .status-badge {
        font-size: 11px;
        font-weight: 800;
        padding: 4px 10px;
        border-radius: 50px;
    }

    .status-active { background: var(--green-gradient); color: black; }
    .status-closed { background: var(--border); color: var(--text-muted); }

    .tournament-title {
        font-size: 20px;
        font-weight: 700;
        margin: 15px 0 10px;
        color: white;
    }

    .tournament-info {
        font-size: 13px;
        color: var(--text-muted);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .tournament-actions {
        margin-top: auto;
        display: flex;
        gap: 10px;
        padding-top: 20px;
        border-top: 1px solid var(--border-light);
    }

    .btn-action {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.05);
        color: var(--text-muted);
        border: 1px solid var(--border-light);
        transition: var(--transition);
    }

    .btn-action:hover {
        background: var(--red-soft);
        color: var(--red);
        border-color: var(--red);
        transform: scale(1.1);
    }

    .btn-view {
        flex-grow: 1;
        background: transparent;
        border: 1px solid var(--red);
        color: var(--red);
        padding: 8px;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
        font-size: 13px;
        transition: var(--transition);
    }

    .btn-view:hover {
        background: var(--red);
        color: white;
    }

    .btn-view:hover {
        background: var(--red);
        color: white;
    }

    .filter-bar {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 20px;
        margin-bottom: 40px;
        backdrop-filter: blur(10px);
    }

    .form-control-pf {
        background: rgba(0,0,0,0.3);
        border: 1px solid var(--border-light);
        color: white;
        padding: 10px 15px;
        border-radius: 8px;
        width: 100%;
    }

    .form-control-pf:focus {
        border-color: var(--red);
        outline: none;
        box-shadow: 0 0 0 2px var(--red-soft);
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="hero mb-5">
        <h1 class="mb-3">NOS TOURNOIS</h1>
        <p class="mb-5">Rejoignez l'élite, participez aux tournois les plus prestigieux et gagnez des récompenses légendaires.</p>
        
        <div class="d-flex justify-content-center gap-3">
            <a href="{{ path('app_tournament_new') }}" class="btn-organiser">
                <i class="fas fa-plus-circle"></i> ORGANISER UN TOURNOI
            </a>
            <a href="{{ path('app_tournament_stats') }}" class="btn-secondary-pf">
                <i class="fas fa-chart-bar text-danger"></i> STATISTIQUES GLOBALES
            </a>
        </div>
    </div>

    <!-- Advanced Filters -->
    <div class="filter-bar">
        <form id="filterForm" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="small text-muted mb-2">RECHERCHE</label>
                <input type="text" name="query" class="form-control-pf" placeholder="Nom ou Jeu..." value="{{ searchQuery|default('') }}">
            </div>
            
            <div class="col-md-2">
                <label class="small text-muted mb-2">JEU</label>
                <select name="game" class="form-control-pf">
                    <option value="">Tous</option>
                    <option value="Valorant">Valorant</option>
                    <option value="CS:GO">CS:GO</option>
                    <option value="League of Legends">League of Legends</option>
                    <option value="Rocket League">Rocket League</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="small text-muted mb-2">PHASE</label>
                <select name="phase" class="form-control-pf">
                    <option value="">Toutes</option>
                    <option value="Inscriptions">Inscriptions</option>
                    <option value="Qualifications">Qualifications</option>
                    <option value="Playoffs">Playoffs</option>
                    <option value="Finale">Finale</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="small text-muted mb-2">VALIDITÉ</label>
                <select name="isActive" class="form-control-pf">
                    <option value="">Tout</option>
                    <option value="1">Actifs</option>
                    <option value="0">Fermés</option>
                </select>
            </div>
             
             <div class="col-md-3">
                <label class="small text-muted mb-2">DATE DÉBUT MIN</label>
                <input type="date" name="minDate" class="form-control-pf">
            </div>

            <div class="col-md-3">
                 <label class="small text-muted mb-2">DATE FIN MAX</label>
                 <input type="date" name="maxDate" class="form-control-pf">
            </div>

            <div class="col-md-2">
                <label class="small text-muted mb-2">TRIER PAR</label>
                <select name="sort" class="form-control-pf">
                    <option value="startDate">Date</option>
                    <option value="name">Nom</option>
                    <option value="game">Jeu</option>
                </select>
            </div>
            
            <div class="col-md-2">
                 <label class="small text-muted mb-2">ORDRE</label>
                 <select name="order" class="form-control-pf">
                     <option value="DESC">Décroissant</option>
                     <option value="ASC">Croissant</option>
                 </select>
            </div>

            <div class="col-md-2 d-flex gap-2">
                <button type="button" id="resetBtn" class="btn-action flex-grow-1"><i class="fas fa-undo"></i></button>
            </div>
        </form>
    </div>

    <!-- Grid -->
    <div id="tournamentGrid" class="row g-4 position-relative">
        <div id="loadingSpinner" class="position-absolute top-50 start-50 translate-middle" style="display: none; z-index: 10;">
            <div class="spinner-border text-danger" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
        {% include 'tournament/_list_content.html.twig' %}
    </div>

</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('filterForm');
        const grid = document.getElementById('tournamentGrid');
        const spinner = document.getElementById('loadingSpinner');
        const inputs = form.querySelectorAll('input, select');
        const resetBtn = document.getElementById('resetBtn');

        let timeout = null;

        function fetchTournaments() {
            spinner.style.display = 'block';
            grid.style.opacity = '0.5';

            const formData = new FormData(form);
            const params = new URLSearchParams(formData);

            fetch(`${window.location.pathname}?${params.toString()}`, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                // Determine if response is the full page or just the partial
                // In this simplified implementation, we expect the controller to render just the partial if AJAX
                // However, if the controller renders the full page (as typical in simple Symfony apps without separation),
                // we might need to parse it. But for this task, I will update the controller to return ONLY the partial.
                grid.innerHTML = html;
                
                // Re-add spinner as it was overwritten
                 const outputSpinner = document.createElement('div');
                 outputSpinner.id = 'loadingSpinner';
                 outputSpinner.className = 'position-absolute top-50 start-50 translate-middle';
                 outputSpinner.style.display = 'none';
                 outputSpinner.style.zIndex = '10';
                 outputSpinner.innerHTML = '<div class="spinner-border text-danger" role="status"><span class="visually-hidden">Loading...</span></div>';
                 grid.prepend(outputSpinner);
            })
            .catch(error => console.error('Error:', error))
            .finally(() => {
                spinner.style.display = 'none';
                grid.style.opacity = '1';
            });
        }

        inputs.forEach(input => {
            input.addEventListener('input', () => {
                clearTimeout(timeout);
                timeout = setTimeout(fetchTournaments, 300);
            });
            
            if (input.tagName === 'SELECT') {
                input.addEventListener('change', fetchTournaments);
            }
        });

        resetBtn.addEventListener('click', () => {
            form.reset();
            fetchTournaments();
        });
    });
</script>
{% endblock %}
