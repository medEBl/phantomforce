            exportData += `${index + 1}. ${game}\n`;
            exportData += `   Date: ${date}\n`;
            exportData += `   ${team1} ${score1} - ${score2} ${team2}\n`;
            exportData += `   Statut: ${status}\n`;
            exportData += `   ${hasWinner ? 'Avec gagnant' : 'Sans gagnant'}\n`;
