    /* Styles pour l'effet de filtrage */
    .team-card.hidden {
        display: none;
    }
    
    .team-card.filtered-out {
        opacity: 0.3;
        transform: scale(0.95);
        transition: all 0.3s ease;
    }
    
    @media (max-width: 768px) {
