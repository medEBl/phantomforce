        </div>
        
        <div class="col-md-6 mb-3">
            {{ form_label(form.team1, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.team1, {'attr': {'class': 'form-select'}}) }}
        </div>
        
        <div class="col-md-6 mb-3">
            {{ form_label(form.team2, null, {'label_attr': {'class': 'form-label'}}) }}
