<script>
// Animations supplÃ©mentaires
document.addEventListener('DOMContentLoaded', function() {
    // Animation des cartes au chargement
    const cards = document.querySelectorAll('.item-card, .payment-card, .stat-card');
    cards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
        card.style.animation = 'fadeInUp 0.5s ease-out forwards';
    });

    // Ajout de l'animation CSS
    const style = document.createElement('style');
    style.textContent = `
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .item-card, .payment-card, .stat-card {
            opacity: 0;
        }
    `;
    document.head.appendChild(style);

    // Effet hover amÃ©liorÃ©
    const hoverElements = document.querySelectorAll('.item-card, .payment-card');
    hoverElements.forEach(el => {
        el.addEventListener('mouseenter', function() {
            this.style.zIndex = '100';
        });
        el.addEventListener('mouseleave', function() {
            this.style.zIndex = '1';
        });
    });

    // Animation du titre
    const title = document.querySelector('.shop-title');
    let hue = 0;
    setInterval(() => {
        hue = (hue + 1) % 360;
        title.style.filter = `hue-rotate(${hue}deg) drop-shadow(0 0 10px hsl(${hue}, 100%, 50%))`;
    }, 50);
});
</script>
